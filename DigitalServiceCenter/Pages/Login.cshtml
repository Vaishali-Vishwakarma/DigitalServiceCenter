@page
@model DigitalServiceCenter.Pages.LoginModel
@{
}
<form id="myForm" class="login col-md-6" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2>Login</h2>
    <div class="form-group">
        @*<label class="col-form-label" asp-for="user.Email"></label>*@
        <input class="form-control" asp-for="admin.Email" placeholder="*Email address"/>@*type="email" name="email" />*@
        <span asp-validation-for="admin.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        @*<label class="col-form-label" asp-for="user.Password"></label>*@
        <input class="form-control col-md-6" asp-for="admin.Password" placeholder="*Password"/>@*type="password" name="password" />*@
        <span asp-validation-for="admin.Password" class="text-danger"></span>
    </div>
    
    <button id="saveBtn" type="submit" disabled>Login</button>
    <a href="">Forgot your password?</a><a href="/Registration"> Sign up </a>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

<script>
    var $form = $("#myForm");
    var $btn = $("#saveBtn");

    $form.on("blur", "input", () => {
        //console.log($form.valid());

        if($form.valid())
        {
            $btn.removeAttr("disabled");
        }
        else
        {
            $btn.attr("disabled", "disabled");
        }
    });
</script>
}