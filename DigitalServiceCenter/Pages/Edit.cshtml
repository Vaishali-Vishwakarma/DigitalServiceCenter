<div class="container mt-5"> 
	<div class="row justify-content-center align-items-center">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<form method="post">
				<div asp-validation-summary=ModelOnly class="text-danger"></div>
				<div class="mb-3">
					<input type="hidden" name="id" asp-for="@Model.companey.Id" class="form-control"/>
				</div>
				<div class="mb-3">
					<input type="text" name="CompaneyName" placeholder="Companey Name" asp-for="@Model.companey.CompaneyName" class="form-control"/>
				</div>
				<div class="mb-3">
					<input type="email" name="Email" placeholder="Email" asp-for="@Model.companey.Email" class="form-control"/>
				</div>
				<div class="mb-3">
					<input type="text" name="Subject" placeholder="Subject" asp-for="@Model.companey.Subject" class="form-control"/>
				</div>
				<div class="mb-3">
					<input type="text" name="Discription" placeholder="Companey Description" asp-for="@Model.companey.Discription" class="form-control"/>
				</div>
				<div class="mb-3">
					<textarea name="AddressContactInfo" style="height: 100px;" placeholder="Companey Address & Contact Info" asp-for="@Model.companey.AddressContactInfo" class="form-control">@Model.companey.AddressContactInfo</textarea>
				</div>
				<div class="mb-3 form-check">
					<input type="checkbox" name="Status" asp-for="@Model.companey.Status" class="form-check-input"/>
					<label for="Status">Approved by Admin</label>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Send</button>
				</div>
			</form>
		</div>
	</div>
</div>